{% extends 'base.html.twig' %}

{% block title %}
  Connection
{% endblock %}

{% block body %}
  <!-- ============================ Page Title Start================================== -->
  <div class="page-title" style="background:#017efa url({{ asset('assets/img/page-title.png') }}) no-repeat;">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12">
          <h2 class="text-light">Veuillez se connecter</h2>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================ Page Title End ================================== -->

  <div class="container">
    <!-- row Start -->
    <div class="row form-submit mt-5">
      <div class="col-lg-2"></div>
      <div class="col-lg-8 col-md-12 col-sm-12">
        <form method="post" action="{{ path('app_login') }}">
          {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}

          <label for="username" class="mt-2">Email</label>
          <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus />
          <label for="password" class="mt-2">Mot de passe</label>
          <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required />

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

          {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

          <button class="btn mt-3 btn-success" type="submit">Se connecter</button>
        </form>
        <!-- row Start -->
        <div class="row mt-5">
          <div class="col-lg-12 col-md-12">
            <div class="alert alert-danger text-center" role="alert">
              Hello, vous n'avez pas de compte ? Veuillez <a href="{{ path('inscription') }}" class="text-primary">s'inscrire'</a>
            </div>
          </div>
        </div>
        <!-- /row -->
      </div>

      <!-- Col-lg 4 -->
      <div class="col-lg-2 col-md-12 col-sm-12"></div>
      <!-- /col-lg-4 -->
    </div>
    <!-- /row -->
  </div>
{% endblock %}
